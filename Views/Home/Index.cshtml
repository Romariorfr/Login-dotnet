@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem Vindo a página de Login!</h1>
    <p>Entre com o Seu Nome de Usuário e senha:</p>
</div>

<form method="post" action="/Home/Login">
    <div class="form-group">
        <label for="username">Nome de Usuário:</label>
        <input type="text" id="username" name="username" class="form-control" placeholder="Digite seu nome de usuário" required />
    </div>

    <div class="form-group">
        <label for="password">Senha:</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Digite sua senha" required />
    </div>

    <button type="submit" class="btn btn-primary">Entrar</button>
</form>

@if (ViewData["LoginError"] != null)
{
        <div class="alert alert-danger mt-3">
            <strong>Erro:</strong> @ViewData["LoginError"]
        </div>
}
